<?php
header('Content-type: image/jpeg');
header('Cache-Control: public, max-age=31636000');
$expire = "Expires: " . gmdate("D, d M Y H:i:s", time() + 31636000) . " GMT";
Header($expire);

$lastModified = "Last-Modified: " . gmdate("D, d M Y H:i:s", filemtime($imageResource)) . " GMT";
Header($lastModified);

 ob_start();
    echo exif_thumbnail($imageResource);
header('Content-Length: ' . ob_get_length());
 ob_end_flush();
 exit;
